<Window x:Class="AOP.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="450" Width="525">
	<StackPanel>
		<GroupBox Header="Verbose" Margin="10">
			<StackPanel>
				<TextBox Text="{Binding StockTickerVerbose.Name, Mode=OneWayToSource, UpdateSourceTrigger=PropertyChanged}" />
                <TextBox Text="{Binding StockTickerVerbose.Price, Mode=OneWayToSource, UpdateSourceTrigger=PropertyChanged}" />

				<TextBlock Text="{Binding StockTickerVerbose.Name}" />
				<TextBlock Text="{Binding StockTickerVerbose.Price}" />
			</StackPanel>
		</GroupBox>

		<GroupBox Header="POCO INotifyPropertyChanged" Margin="10">
			<StackPanel>
                <TextBox Text="{Binding StockTickerInpc.Name, Mode=OneWayToSource, UpdateSourceTrigger=PropertyChanged}" />
                <TextBox Text="{Binding StockTickerInpc.Price, Mode=OneWayToSource, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock Text="{Binding StockTickerInpc.Name}" />
                <TextBlock Text="{Binding StockTickerInpc.Price}" />
			</StackPanel>
		</GroupBox>

        <GroupBox Header="POCO DependencyObject" Margin="10">
            <StackPanel>
                <TextBox Text="{Binding StockTickerPoco.Name, Mode=OneWayToSource, UpdateSourceTrigger=PropertyChanged}" />
                <TextBox Text="{Binding StockTickerPoco.Price, Mode=OneWayToSource, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock Text="{Binding StockTickerPoco.Name}" />
                <TextBlock Text="{Binding StockTickerPoco.Price}" />
            </StackPanel>
        </GroupBox>
    </StackPanel>
</Window>